{
  "name": "ab-start-project",
  "version": "1.0.0",
  "description": "Установка: выполнить в папке проекта: `npm i`.",
  "main": "gulpfile.js",
  "repository": {
    "type": "git",
    "url": "https://github.com//alekseyburn/ab-start-project.git"
  },
  "author": "Aleksey Korshakov",
  "license": "ISC",
  "configProject": {
    "blocks": {
      "sprite-svg": [],
      "sprite-png": [
        "__demo"
      ]
    },
    "addCssBefore": [
      "./src/sass/variables.scss",
      "./src/sass/mixins.scss",
      "./src/sass/fonts.scss"
    ],
    "addCssAfter": [
      "./src/sass/scaffolding.scss"
    ],
    "addJsBefore": [
      "./node_modules/svg4everybody/dist/svg4everybody.js"
    ],
    "addJsAfter": [
      "./src/js/global-script.js"
    ],
    "addImages": [
      "./src/img/*.{jpg,jpeg,gif,png,svg,ico}"
    ],
    "copiedCss": [],
    "copiedJs": [],
    "dirs": {
      "srcPath": "./src/",
      "buildPath": "./build/",
      "blocksDirName": "blocks"
    }
  },
  "dependencies": {
    "csscomb": "^4.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "browser-sync": "^2.26.7",
    "browserslist": "^4.10.0",
    "cross-env": "^7.0.2",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "gh-pages": "^2.2.0",
    "gulp": "^4.0.2",
    "gulp-cheerio": "^1.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-svgstore": "^7.0.1",
    "gulp-uglify": "^3.0.2",
    "gulp.spritesmith": "^6.11.0",
    "husky": "^4.2.3",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "lint-staged": "^10.0.8",
    "merge-stream": "^2.0.0",
    "mkdirp": "^1.0.3",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.15.0",
    "svg4everybody": "^2.1.9",
    "vinyl-buffer": "^1.0.1"
  },
  "config": {
    "directories": {
      "source": "./src",
      "build": "./build"
    }
  },
  "scripts": {
    "start": "gulp",
    "test": "stylelint \"./src/**/*.scss\" --syntax=scss",
    "precommit": "npm test",
    "lint-staged": "lint-staged",
    "build": "cross-env NODE_ENV=production npm start build",
    "deploy": "cross-env NODE_ENV=production ./node_modules/.bin/gulp build && cross-env ./node_modules/.bin/gulp deploy"
  },
  "lint-staged": {
    "*.scss": "stylelint --syntax=scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
